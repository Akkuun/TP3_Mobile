<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewSlot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premier créneau 8h-10h : "
        android:layout_marginTop="16dp"
        android:paddingTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewSlot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second créneau 10h-12h : "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSlot1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewSlot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Troisième créneau 14h-16h : "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSlot2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewSlot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quatrième créneau 16h-18h : "
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSlot3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour à l'accueil"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSlot4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>